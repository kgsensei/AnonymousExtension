{
	"manifest_version": 3,
	"name": "Anonymous Extension",
	"author": "kgsensei",
	"homepage_url": "https://anon.kgsensei.dev",
	"description": "An extension developed to help you stay anonymous online with tracking prevention and ad blocking capabilities!",
	"default_locale": "en",
	"version": "5.4",

	"action": {
		"default_icon": "src/icon.png",
		"default_popup": "src/dash/dashboard.html"
	},

	"icons": {
		"64": "src/icon_64x64.png",
		"128": "src/icon_128x128.png"
	},

	"permissions": [
		"declarativeNetRequest",
		"storage"
	],

	"background": {
		"scripts": [ "src/background.js" ]
	},

	"browser_specific_settings": {
		"gecko": {
			"id": "anonymousextension@kgsensei.dev",
			"strict_min_version": "142.0",
			"data_collection_permissions": {
				"required": [ "none" ]
			}
		}
	}
}
